# Copy this file to .env and fill secrets for local development

# JWT secrets (change these before sharing)
ACCESS_TOKEN_SECRET=change_this_access_secret
REFRESH_TOKEN_SECRET=change_this_refresh_secret

# Server
PORT=5000
NODE_ENV=development

# Google OAuth (required for Gmail integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# MongoDB (required for snooze & summary cache)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/mail?retryWrites=true&w=majority

# Google Gemini AI (required for email summarization)
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# Frontend URL
FE_URL=http://localhost:3000
